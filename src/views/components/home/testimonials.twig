{#
| Variable      | Type   | Description                                                      |
|---------------|--------|------------------------------------------------------------------|
| items[]       | array  | List of testimonials                                             |
| items[].title | string | Customer name                                                    |
| items[].text  | string | Testimonial content                                              |
| items[].stars | int    | Rating stars (1-5)                                               |
#}
<section class="py-16 bg-gray-50 overflow-hidden">
    <div class="container">
        <div class="text-center max-w-2xl mx-auto mb-12">
            <h2 class="text-3xl font-bold text-gray-800 mb-4">{{ trans('blocks.home.testimonials_title')|default('آراء عملائنا') }}</h2>
            <p class="text-gray-500">{{ trans('blocks.home.testimonials_subtitle')|default('نفخر بخدمة أكثر من 10,000 عميل سعيد') }}</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {% for item in items|slice(0, 3) %}
                <div class="bg-white p-8 rounded-2xl shadow-sm hover:shadow-md transition-all duration-300 relative">
                    <div class="text-4xl text-primary/20 absolute top-4 right-6">
                        <i class="sicon-quote-first"></i>
                    </div>
                    
                    <div class="flex text-yellow-400 mb-4">
                        {% for i in 1..5 %}
                            <i class="sicon-star2 {{ i <= (item.stars|default(5)) ? '' : 'text-gray-200' }}"></i>
                        {% endfor %}
                    </div>

                    <p class="text-gray-600 leading-relaxed mb-6">
                        "{{ item.text }}"
                    </p>

                    <div class="flex items-center gap-3">
                        <div class="w-10 h-10 rounded-full bg-gray-100 flex items-center justify-center text-gray-500 font-bold">
                            {{ item.title|first }}
                        </div>
                        <div>
                            <h4 class="font-bold text-gray-800 text-sm">{{ item.title }}</h4>
                            <span class="text-xs text-green-500 flex items-center gap-1">
                                <i class="sicon-verify-fill"></i>
                                {{ trans('common.elements.verified_purchase')|default('شراء مؤكد') }}
                            </span>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>

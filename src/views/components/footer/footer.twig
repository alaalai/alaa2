<footer class="store-footer bg-gray-900 text-gray-300 pt-16 pb-8">
    <div class="container">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 mb-16">
            {# Column 1: About & Social #}
            <div class="space-y-6">
                <a href="{{ link('/') }}" class="block">
                    <img src="{{ store.logo }}" alt="{{ store.name }}" class="h-12 object-contain brightness-0 invert opacity-90">
                </a>
                {% if store.description %}
                    <p class="text-sm leading-relaxed text-gray-400">
                        {{ store.description|raw }}
                    </p>
                {% endif %}
                <div class="pt-4">
                    <salla-social class="flex gap-4 text-gray-400 hover:text-white transition-colors"></salla-social>
                </div>
            </div>

            {# Column 2: Quick Links #}
            <div>
                <h3 class="text-white font-bold text-lg mb-6">{{ trans('blocks.footer.pages_links') }}</h3>
                <salla-menu source="footer" class="flex flex-col gap-3 text-sm text-gray-400 hover:text-white transition-colors"></salla-menu>
            </div>

            {# Column 3: Contact & Support #}
            <div>
                <h3 class="text-white font-bold text-lg mb-6">{{ trans('common.titles.contact_us') }}</h3>
                <salla-contacts class="flex flex-col gap-4 text-sm text-gray-400"></salla-contacts>
            </div>

            {# Column 4: Trust & Apps #}
            <div class="space-y-8">
                {# Apps #}
                <salla-apps-icons></salla-apps-icons>
                
                {# Trust Badges #}
                <div>
                    <h4 class="text-white font-bold text-sm mb-4">{{ trans('common.titles.guaranteed_by') }}</h4>
                    <salla-trust-badges dark></salla-trust-badges>
                </div>

                {# VAT #}
                {% if store.settings.tax.number %}
                    <div class="flex items-center gap-3 pt-4 border-t border-gray-800">
                        {% if store.settings.tax.certificate %}
                            <a class="load-img-onclick" data-modal-id="modal-value-tax" href="#/">
                                <img src="{{ 'images/tax.png' | cdn(70,70) }}" class="w-8 h-auto opacity-70 hover:opacity-100 transition-opacity" alt="VAT">
                            </a>
                        {% endif %}
                        <div>
                            <p class="text-xs text-gray-500">{{ trans('common.elements.tax_number') }}</p>
                            <p class="text-sm font-mono text-gray-300">{{ store.settings.tax.number }}</p>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>

        {# Copyright & Payments #}
        <div class="pt-8 border-t border-gray-800 flex flex-col md:flex-row items-center justify-between gap-4">
            <p class="text-sm text-gray-500">
                {% hook copyright %}
            </p>
            <salla-payments></salla-payments>
        </div>
    </div>
</footer>

{% if store.settings.tax.certificate %}
    <salla-modal sub-title-first sub-title="{{ trans('common.elements.tax_number') }}" modal-title="{{ store.settings.tax.number }}" id="modal-value-tax">
        <div class="flex justify-center">
            <img class="max-w-full" loading="lazy" src="{{ store.settings.tax.certificate }}" alt="{{ store.settings.tax.number }}"/>
        </div>
    </salla-modal>
{% endif %}

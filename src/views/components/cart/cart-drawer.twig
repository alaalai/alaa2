<div id="cart-drawer" class="fixed inset-0 z-[70] invisible opacity-0 transition-all duration-300" aria-hidden="true">
    <div class="absolute inset-0 bg-black/50 backdrop-blur-sm transition-opacity" onclick="salla.event.dispatch('cart::close')"></div>
    <div class="absolute top-0 right-0 bottom-0 w-full max-w-md bg-white shadow-2xl transform translate-x-full transition-transform duration-300 flex flex-col drawer-content">
        
        {# Header #}
        <div class="p-4 border-b border-gray-100 flex items-center justify-between bg-white z-10">
            <h2 class="font-bold text-lg text-gray-800 flex items-center gap-2">
                <i class="sicon-shopping-bag"></i>
                {{ trans('blocks.header.cart') }}
                <span id="drawer-cart-count" class="bg-primary text-white text-xs rounded-full h-5 w-5 flex items-center justify-center">0</span>
            </h2>
            <button onclick="salla.event.dispatch('cart::close')" class="p-2 text-gray-500 hover:text-red-500 transition-colors">
                <i class="sicon-cancel text-xl"></i>
            </button>
        </div>

        {# Free Shipping Bar #}
        <div id="drawer-shipping-bar" class="px-4 py-3 bg-gray-50 border-b border-gray-100 hidden">
            <p class="text-sm text-gray-600 mb-2" id="drawer-shipping-msg"></p>
            <div class="h-2 bg-gray-200 rounded-full overflow-hidden">
                <div id="drawer-shipping-progress" class="h-full bg-green-500 transition-all duration-500 w-0"></div>
            </div>
        </div>

        {# Cart Items #}
        <div class="flex-1 overflow-y-auto p-4 space-y-4" id="drawer-cart-items">
            <!-- Items will be injected here via JS -->
            <div class="flex flex-col items-center justify-center h-full text-gray-500">
                <i class="sicon-shopping-bag text-4xl mb-4 opacity-50"></i>
                <p>{{ trans('pages.cart.empty_cart') }}</p>
                <a href="{{ link('/') }}" onclick="salla.event.dispatch('cart::close')" class="btn btn--primary btn--small mt-4">{{ trans('common.elements.back_home') }}</a>
            </div>
        </div>

        {# Upsells #}
        <div id="drawer-upsell" class="border-t border-gray-100 p-4 bg-gray-50 hidden">
            <h3 class="font-bold text-sm text-gray-800 mb-3">{{ trans('pages.products.frequently_bought_together')|default('منتجات قد تعجبك') }}</h3>
            <salla-products-slider source="related" limit="4" class="upsell-slider"></salla-products-slider>
        </div>

        {# Footer #}
        <div class="p-4 border-t border-gray-100 bg-white shadow-[0_-4px_6px_-1px_rgba(0,0,0,0.05)]">
            <div class="flex justify-between items-center mb-4">
                <span class="text-gray-600">{{ trans('pages.cart.total') }}</span>
                <span class="font-bold text-xl text-primary" id="drawer-cart-total">0</span>
            </div>
            <div class="grid grid-cols-2 gap-3">
                <a href="{{ link('/cart') }}" class="btn btn--outline-primary w-full justify-center">{{ trans('blocks.header.cart') }}</a>
                <button onclick="salla.cart.submit()" class="btn btn--primary w-full justify-center">{{ trans('pages.cart.complete_order') }}</button>
            </div>
        </div>
    </div>
</div>
